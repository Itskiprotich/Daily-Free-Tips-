<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".VipTips.Registration">

    <FrameLayout
        android:layout_width="320.0dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="20.0dip">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_add"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10.0dip"
            app:cardBackgroundColor="#ff2ea67f"
            app:cardCornerRadius="6.0dip"
            app:cardElevation="3.0dip"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="25.0dip"
                    android:paddingRight="25.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="35.0dip"
                        android:text="Daily Sports Tips offers you with the following packages"
                        android:textAllCaps="true"
                        android:textColor="@color/text"
                        android:textSize="15.0sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/red"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/aaaa"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.0dip"
                            android:background="@drawable/freebut"
                            android:onClick="oneday"
                            android:text="Daily/Ksh 50" />

                        <Button
                            android:id="@+id/bbbb"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:background="@drawable/freebut"
                            android:onClick="oneweek"
                            android:text="Weekly/Ksh 300" />

                        <Button
                            android:id="@+id/cccc"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:layout_marginBottom="20.0dip"
                            android:background="@drawable/freebut"
                            android:onClick="onemonth"
                            android:text="Monthly/Ksh 800" />
                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:hint="Phone Number"
                            android:inputType="phone"
                            android:textColor="@color/text"
                            android:textColorHint="@color/text" />
                    </android.support.design.widget.TextInputLayout>

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:hint="Amount"
                        android:visibility="gone"
                        android:inputType="number"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        />

                    <ImageView
                        android:id="@+id/aabbcc"
                        android:layout_width="fill_parent"
                        android:layout_height="80.0dip"
                        android:layout_centerInParent="true"
                        android:fitsSystemWindows="true"
                        android:src="@drawable/lipapesa" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/infor"
                        android:textColor="@color/text" />

                    <Button
                        android:id="@+id/dddd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:background="@drawable/freebut"
                        android:onClick="startMpesa"
                        android:text="Proceed"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/text" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:src="@drawable/ic_close_black_24dp"
            app:fabSize="normal" />
    </FrameLayout>
</RelativeLayout>
</ScrollView>